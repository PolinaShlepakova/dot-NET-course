<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="BookGrid" HorizontalAlignment="Left" Height="337" Margin="10,10,0,0" 
                  VerticalAlignment="Top" Width="772" RowHeight="25" 
                  RowBackground="White" AlternatingRowBackground="LightBlue"/>
        <Button Content="Load from file" HorizontalAlignment="Left" Margin="213,364,0,0" 
                VerticalAlignment="Top" Width="163" Height="40" Click="btnOpenFile_Click"/>
        <Button Content="Load to file" HorizontalAlignment="Left" Margin="416,364,0,0" 
                VerticalAlignment="Top" Width="163" Height="40" Click="btnSaveFile_Click"/>
        
    </Grid>
</Window>
